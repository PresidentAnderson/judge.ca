        {
          "src": "/images/icons/academy-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Automation Auction",
      "short_name": "Automation",
      "description": "Submit automation projects",
      "url": "/automation/",
      "icons": [
        {
          "src": "/images/icons/automation-shortcut.png",
          "sizes": "96x96",
