{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "jsx": "react",
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@backend/*": ["src/backend/*"]
    }
  },
  "include": ["src/backend/**/*.ts", "src/shared/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "src/frontend/**/*",
    "pages/**/*",
    "components/**/*",
    "**/*.js",
    "**/*.jsx"
  ]
}